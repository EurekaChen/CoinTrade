<ListView x:Class="Eureka.CoinTrade.TradeModule.View.OrdersView"
           ResxExtension.DefaultResxName="Eureka.CoinTrade.TradeModule.View.Resource" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="302" Height="200">
    <ListView.View>
        <GridView>
            <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}"  Width="95"/>
            <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Quantity}"  Width="90" />
            <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="120" />
        </GridView>
    </ListView.View>
</ListView>

