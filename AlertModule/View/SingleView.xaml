<UserControl x:Class="Eureka.CoinTrade.AlertModule.View.SingleView"
             ResxExtension.DefaultResxName="Eureka.CoinTrade.AlertModule.View.Resource" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:Eureka.CoinTrade.AlertModule.View"
             xmlns:prism="http://www.codeplex.com/CompositeWPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
   
    <StackPanel>
        <GroupBox>
            <GroupBox.Header>
                <TextBlock Text="{Resx _AddAlert}"></TextBlock>
            </GroupBox.Header>
            <ContentControl prism:RegionManager.RegionName="SingleAddAlertRegion" />
        </GroupBox>
        <GroupBox>
            <GroupBox.Header>
                <WrapPanel>
                    <TextBlock Text="{Resx _Alerts}"></TextBlock>                   
                </WrapPanel>
            </GroupBox.Header>
            <ContentControl prism:RegionManager.RegionName="SingleAlertsRegion" />
        </GroupBox>

    </StackPanel>
</UserControl>
